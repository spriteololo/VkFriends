<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Fonts -->
    <style name="TextAppearance.Base.Regular" parent="android:TextAppearance">
        <item name="fontPath">@string/font_regular_path</item>
    </style>

    <style name="TextAppearance.Base.Medium" parent="android:TextAppearance">
        <item name="fontPath">@string/font_medium_path</item>
    </style>

    <style name="TextAppearance.Base.Light" parent="android:TextAppearance">
        <item name="fontPath">@string/font_light_path</item>
    </style>

    <style name="TextAppearance.Base.Thin" parent="android:TextAppearance">
        <item name="fontPath">@string/font_thin_path</item>
    </style>

    <!-- Display 4 TextAppearance -->
    <style name="TextAppearance.Display4.Base" parent="TextAppearance.Base.Light">
        <item name="android:textSize">112sp</item>
    </style>

    <style name="TextAppearance.Display4.PrimarySecondary" parent="TextAppearance.Display4.Base">
        <item name="android:textColor">@color/color_text_primary_secondary</item>
    </style>

    <!-- Display 3 TextAppearance -->
    <style name="TextAppearance.Display3.Base" parent="TextAppearance.Base.Regular">
        <item name="android:textSize">56sp</item>
    </style>

    <style name="TextAppearance.Display3.PrimarySecondary" parent="TextAppearance.Display3.Base">
        <item name="android:textColor">@color/color_text_primary_secondary</item>
    </style>

    <!-- Display 2 TextAppearance -->
    <style name="TextAppearance.Display2.Base" parent="TextAppearance.Base.Regular">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="TextAppearance.Display2.PrimarySecondary" parent="TextAppearance.Display2.Base">
        <item name="android:textColor">@color/color_text_primary_secondary</item>
    </style>

    <!-- Display 1 TextAppearance -->
    <style name="TextAppearance.Display1.Base" parent="TextAppearance.Base.Regular">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.Display1.PrimarySecondary" parent="TextAppearance.Display1.Base">
        <item name="android:textColor">@color/color_text_primary_secondary</item>
    </style>

    <!-- Headline TextAppearance -->
    <style name="TextAppearance.Headline.Base" parent="TextAppearance.Base.Regular">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Headline.Primary" parent="TextAppearance.Headline.Base">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <!-- Title TextAppearance -->
    <style name="TextAppearance.Title.Base" parent="TextAppearance.Base.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Title.Primary" parent="TextAppearance.Title.Base">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <!-- Subheading TextAppearance -->
    <style name="TextAppearance.Subheading.Base" parent="TextAppearance.Base.Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Subheading.Primary" parent="TextAppearance.Subheading.Base">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="TextAppearance.Subheading.Accent" parent="TextAppearance.Subheading.Base">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <!-- Body 2 TextAppearance -->
    <style name="TextAppearance.Body2.Base" parent="TextAppearance.Base.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Body2.Primary" parent="TextAppearance.Body2.Base">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <!-- Body 1 TextAppearance -->
    <style name="TextAppearance.Body1.Base" parent="TextAppearance.Base.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Body1.Primary" parent="TextAppearance.Body1.Base">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="TextAppearance.Body1.PrimarySecondary" parent="TextAppearance.Body1.Base">
        <item name="android:textColor">@color/color_text_primary_secondary</item>
    </style>

    <!-- Caption TextAppearance -->
    <style name="TextAppearance.Caption.Base" parent="TextAppearance.Base.Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Caption.PrimarySecondary" parent="TextAppearance.Caption.Base">
        <item name="android:textColor">@color/color_text_primary_secondary</item>
    </style>

    <style name="TextAppearance.Caption.Primary" parent="TextAppearance.Caption.Base">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <!-- Button TextAppearance -->
    <style name="TextAppearance.Button.Base" parent="TextAppearance.Base.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Button.Accent" parent="TextAppearance.Button.Base">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="TextAppearance.Button.Primary" parent="TextAppearance.Button.Base">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <!-- Button styles -->
    <style name="Style.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextAppearance.Button.Primary</item>
    </style>

    <style name="Style.Button.Flat.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/TextAppearance.Button.Accent</item>
    </style>

    <style name="Style.Button.Flat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextAppearance.Button.Primary</item>
    </style>

</resources>
